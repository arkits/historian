// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model History {
  id            String   @id @default(uuid()) @db.Uuid
  createdAt     DateTime @default(now()) @db.Timestamp(6)
  timelineTime  DateTime @db.Timestamp(6)
  type          String
  contentId     String
  content       Json     @db.Json
  searchContent String?

  User   User   @relation(fields: [userId], references: [id])
  userId String @db.Uuid

  @@unique([contentId, userId, type, timelineTime], map: "History_hash")
}

model User {
  id            String    @id @default(uuid()) @db.Uuid
  name          String    @default("")
  email         String    @unique @default("")
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt

  // Legacy fields - kept during migration period
  // TODO: Remove these after running Phase 2 cleanup migration
  username      String?   @unique @db.VarChar(255)
  passwordHash  String?   @db.VarChar(255)
  preferences   Json?     @db.Json

  // Relations
  History       History[]
  sessions      Session[]
  accounts      Account[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String   @db.Uuid
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                      String    @id @default(uuid())
  userId                  String    @db.Uuid
  accountId               String
  providerId              String
  accessToken             String?
  refreshToken            String?
  accessTokenExpiresAt    DateTime?
  refreshTokenExpiresAt   DateTime?
  scope                   String?
  idToken                 String?
  password                String?
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  user                    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
